<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Uos Unilink"
                android:textColor="#000000"
                android:textSize="30dp"
                android:layout_alignParentTop="true"
                android:id="@+id/unilinkLabel"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                />

            <SearchView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/unilinkLabel"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="19dp"
                android:id="@+id/busStopSearch" />

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/BookmarkLayout"
                android:layout_below="@+id/busStopSearch"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Bookmarked Bus Stops"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:paddingBottom="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/BookmarkLayout"
                android:layout_centerHorizontal="true">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GPS to Closest bus stop"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    />

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</LinearLayout>